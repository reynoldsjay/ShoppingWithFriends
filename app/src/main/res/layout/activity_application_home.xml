<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.generict.shoppingwithfriends.ApplicationHomeActivity">

    <Button
        android:id="@+id/logout_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/logout_text"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/friends_button"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/view_friends_text"
        android:id="@+id/friends_button"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sales_report_text"
        android:id="@+id/sales_report_button"
        android:layout_above="@+id/wish_list_button"
        android:layout_alignRight="@+id/friends_button"
        android:layout_alignEnd="@+id/friends_button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/view_notifications_text"
        android:id="@+id/view_notifications_button"
        android:layout_above="@+id/sales_report_button"
        android:layout_centerHorizontal="true" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_to_wishlist_text"
        android:id="@+id/wish_list_button"
        android:layout_above="@+id/friends_button"
        android:layout_alignRight="@+id/logout_button"
        android:layout_alignEnd="@+id/logout_button" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/map_view_text"
        android:id="@+id/maps_button"
        android:layout_below="@+id/logout_button"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
