<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.generict.shoppingwithfriends.WishListActivity">

    <Button
        android:layout_width="260dp"
        android:layout_height="35dp"
        android:text="@string/back_text"
        android:id="@+id/back_button"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/add_items_button"
        android:layout_alignStart="@+id/add_items_button"
        android:background="#ffff8866"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="#FFFFFF"
        android:fontFamily="sans-serif-light" />

    <Button
        android:layout_width="260dp"
        android:layout_height="35dp"
        android:text="@string/add_text"
        android:id="@+id/add_items_button"
        android:layout_gravity="center_horizontal"
        android:layout_above="@+id/back_button"
        android:layout_centerHorizontal="true"
        android:background="#ffff8866"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="#FFFFFF"
        android:fontFamily="sans-serif-light" />

    <ListView
        style="@style/Base.V14.Theme.AppCompat.Light"
        android:layout_width="match_parent"
        android:layout_height="416dp"
        android:id="@android:id/list"
        android:background="#fffaff9f"
        android:clickable="false"
        android:layout_above="@+id/add_items_button" />

</RelativeLayout>
